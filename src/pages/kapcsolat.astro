---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import { siteNameFull } from 'src/constants';
import HeaderContent from '@components/HeaderContent.astro';
import documentText from '@assets/icons/document-text.svg?raw';
import MainContent from '@components/MainContent.astro';
import { Image } from 'astro:assets';
import taxOnePercentImage from '@assets/images/kapcsolat/kisgalya-kse-egy-szazalek.jpg';

const pageTitle = 'Kapcsolat';

const docs = {
  taxOnePercent:
    'https://drive.google.com/file/d/1k2GBE7MwOmvpCkbsD4ykTisdeUiActIr/view?usp=drive_link',
